{
	"name": "swiss-sculptures-map",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"install_pydeps": "pip install pandas",
		"convert_data": "cd data-conversion && python3 ./convert-features.py && python3 ./convert-metadata.py && mv -f ./metadata.json ../static/metadata.json && mv -f ./features.geojson ../static/features.geojson",
		"dev": "npm run convert_data && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.5.27",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/eslint": "^8.56.7",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.45.1",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.5.0",
		"vite": "^6.2.6"
	},
	"type": "module",
	"dependencies": {
		"@maptiler/sdk": "^2.2.1",
		"express": "^4.19.2",
		"flowbite-svelte": "^0.46.15",
		"maplibre-gl": "^4.3.2",
		"sweetalert2": "^9.17.4"
	}
}
